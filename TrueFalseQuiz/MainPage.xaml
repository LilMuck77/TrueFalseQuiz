<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrueFalseQuiz.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="True or False Quiz" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="messageArea" Text="Messages Here"/>
        <Button x:Name="trueButton" Text="True" Clicked="Button_Clicked"></Button>
        <Button x:Name="falseButton" Text="False" Clicked="Button_Clicked"></Button>



    </StackLayout>

</ContentPage>
